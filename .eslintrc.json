{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:sonarjs/recommended"
    ],
    "plugins": [
        "prettier",
        "sonarjs"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": "error",
        "no-tabs": "off",
        "indent": "off",
        "no-underscore-dangle": "off"
    },
    "overrides": [
        {
            "files": [
                "**/tests/**/*.test.js"
            ],
            "rules": {
                "global-require": "off"
            }
        }
    ]
}